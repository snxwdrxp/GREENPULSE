<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Définition d'une TextAppearance custom pour le texte en gras -->
  <style name="TextAppearance.Bold" parent="TextAppearance.AppCompat">
    <item name="android:textStyle">bold</item>
  </style>

  <!-- Thème principal de l'application -->
  <style name="Theme.Appli_mobile" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/green_primary</item>
    <item name="colorPrimaryDark">@color/green_primary</item>
    <item name="colorAccent">@color/green_accent</item>
    <item name="android:statusBarColor">@color/green_primary</item>
    <item name="android:windowBackground">@color/green_background</item>
    <item name="android:fontFamily">@font/raleway_light</item>
    <item name="android:textAppearance">@style/TextAppearance.Bold</item>
  </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!-- Désactivation de la splash par défaut -->
      <item name="android:windowSplashScreenAnimatedIcon">@null</item>
      <item name="android:windowSplashScreenBackground">@null</item>
      <item name="android:windowSplashScreenIconBackgroundColor">@null</item>
    </style>


</resources>
